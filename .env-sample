# OpenSRP PostgreSQL connection settings
# Option 1: provide OPENSRP_DB_URL directly
# OPENSRP_DB_URL=jdbc:postgresql://localhost:5432/opensrp?currentSchema=public

# Option 2: provide host/port/name/schema (used when OPENSRP_DB_URL is not set)
OPENSRP_DB_HOST=localhost
OPENSRP_DB_PORT=5432
OPENSRP_DB_NAME=opensrp
OPENSRP_DB_SCHEMA=public

# Credentials
OPENSRP_DB_USER=your_db_user
OPENSRP_DB_PASSWORD=your_db_password

# Optional SSL mode (disable, allow, prefer, require, verify-ca, verify-full)
# OPENSRP_DB_SSLMODE=require

# OpenSRP destination for posting verification result events
OPENSRP_SERVER_EVENT_URL=http://localhost:8080/opensrp/rest/event/add
# Optional base URL fallback (used if OPENSRP_SERVER_EVENT_URL is not set)
# OPENSRP_SERVER_URL=http://localhost:8080
OPENSRP_SERVER_USERNAME=opensrp_user
OPENSRP_SERVER_PASSWORD=opensrp_password

# LTF/Index payload encryption key (decrypt/encrypt flow key) used by:
# - /send-ltf-missap-clients
# - /send-index-contacts
LTF_INDEX_PAYLOAD_ENCRYPTION_SECRET_KEY=change_me_to_a_strong_secret

# INTEGRATION_SERVICE_HOST=127.0.0.1
# INTEGRATION_SERVICE_PORT=8080
# INTEGRATION_SERVICE_ROUTES_ASK_TIMEOUT=60s

# CBHTS payload encryption toggle for selected `/integration/ctc2hts` client identity fields.
# Only `true` (case-insensitive) enables encryption; any other value disables it.
ENCRYPT_DATA=false

# CBHTS payload encryption key used only when ENCRYPT_DATA=true
# (encrypts selected outbound `/integration/ctc2hts` identity fields).
CBHTS_PAYLOAD_ENCRYPTION_SECRET_KEY=change_me_to_a_strong_secret
