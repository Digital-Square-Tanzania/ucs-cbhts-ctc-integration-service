# OpenSRP PostgreSQL connection settings
# Option 1: provide OPENSRP_DB_URL directly
# OPENSRP_DB_URL=jdbc:postgresql://localhost:5432/opensrp?currentSchema=public

# Option 2: provide host/port/name/schema (used when OPENSRP_DB_URL is not set)
OPENSRP_DB_HOST=localhost
OPENSRP_DB_PORT=5432
OPENSRP_DB_NAME=opensrp
OPENSRP_DB_SCHEMA=public

# Credentials
OPENSRP_DB_USER=your_db_user
OPENSRP_DB_PASSWORD=your_db_password

# Optional SSL mode (disable, allow, prefer, require, verify-ca, verify-full)
# OPENSRP_DB_SSLMODE=require

# OpenSRP destination for posting verification result events
OPENSRP_SERVER_EVENT_URL=http://localhost:8080/opensrp/rest/event/add
OPENSRP_SERVER_USERNAME=opensrp_user
OPENSRP_SERVER_PASSWORD=opensrp_password
